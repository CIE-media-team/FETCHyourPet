<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectionEnlarge">

    <include
        android:id="@+id/appbar"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_marginBottom="16dp"
        android:paddingTop="8dp"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"

            android:orientation="vertical">


            <ImageView
                android:id="@+id/dogPic"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"

                android:src="@drawable/josiefetch" />


            <TextView
                android:id="@+id/name"
                android:text="JOSIE"
                android:textSize="32sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >

                <TextView
                    android:id="@+id/age"
                    android:text="Age: 8"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="8dp"

                    />
                <TextView
                    android:id="@+id/size"
                    android:text="Size: Medium"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_gravity="center"

                    />








            </LinearLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Top traits:"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/topTraits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Chill, loving, loves treats, loves walks"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Location:"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Zip Code 28403"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Breed:"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Mutt"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Weight:"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="~40 pounds"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Vaccination Status:"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/vaccination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="All shots are up to date!"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Health Concerns:"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/healthConcerns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Dogs can suffer from a variety of health problems ranging from intestinal parasites, skin disease and ear infections, eye problems, digestive upset and dental disease. Many of these conditions can cause uncomfortable symptoms for our canine companions. ... Other dogs may become infected by ingesting feces of other animals."
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>